<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
</head>

<body>
    <header>
        <h1>Projects</h1>
    </header>

    <main>
        <% if (projects.length > 0) { %>
            <% projects.forEach(project => { %>
                <div>
                    <h2><%= project.title %></h2>
                    <p><%= project.description %></p>
                    <p>Availability: <%= project.availability ? 'Available' : 'Not Available' %></p>
                    <p>Tags: <%= project.tags.map(tag => tag.name).join(', ') %></p>
                    <p>Users: <%= project.users.map(user => user.pseudo).join(', ') %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p>No project found.</p>
        <% } %>
    </main>
</body>
</html>
